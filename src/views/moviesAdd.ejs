<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Película</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <nav aria-label ="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/movies">Peliculas</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Agregar Película</li>
                            </ol>
                        </nav>

                    </div>
                    <div class="card-body">
                         <form class="row" action="/movies/create" method="POST">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <label class="form-label" for="title">Título </label>
                                    <p><input class="form-control" type="text" name="title" id="" value="" required></p>
                                </div>
                                <div class="col-12 col-md-3"> 
                                    <label class="form-label" for="rating">Rating </label>
                                    <p><input class="form-control" type="number" name="rating" id="" value="" required></p>
                                </div>
                                <div class="col-12 col-md-3">             
                                    <label class="form-label" for="awards">Premios </label>
                                     <p><input class="form-control" type="number" name="awards" id="" value="" required></p>
                                </div>
                                <div class="col-12 col-md-3"> 
                                    <label class="form-label" for="release_date">Fecha de Estreno</label>
                                     <p><input class="form-control" type="date" name="release_date" id="" value="" required></p>
                                </div>
                                <div class="col-12 col-md-3"> 
                                     <label class="form-label" for="length">Duración </label>
                                    <p><input class="form-control" type="number" name="length" id="" value="" required></p>
                                </div>
                                <div class="col-12 col-md-3"> 
                                    <label class="form-label" for="genre_id">Género </label>
                                    <p>
                                    <select class="form-select" name="genre_id" id="" required>
                                        <option value="" disabled selected>- Selecciona el Género - </option> 
                                        <% allGenres.forEach(genre => { %>                           
                                        <option value="<%= genre.id %>"><%= genre.name %></option>
                                        <% }); %>
                                    </select>
                                </div>
                <div class="col-12 col-md-3">
                    <div>
                        <label for="formFile" class="form-label">Cambiar imágen</label>
                        <input class="form-control" type="file" id="formFile" name="image">
                    </div>
                </div>
            <div class="mb-3 col-12">
                <div class="row">
                <% actors.forEach((actor, i) => { %>
                        <div class="col-12 col-md-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="<%= actor.id %>" id="actor<%= actor.id %>">
                                <label class="form-check-label" for="actor<%= actor.id %>">
                                    <%= actor.first_name %> <%= actor.last_name %> </label>
                                </label>
                            </div>
                        </div>


                <% }) %>
            </div>
        </div>
             <button class="btn btn-sm btn-outline-dark" type="submit">Agregar</button> 
        </form>
    
</body>

</html>